<Window x:Class="WordMaster.AddWordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordMaster"
        mc:Ignorable="d"
        Title="New Word" Height="168" Width="455"  ResizeMode="NoResize">
    <Grid>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="361,94,0,0" VerticalAlignment="Top" Click="cancelButton_Click"/>
        <Button x:Name="okButton" Content="OK" HorizontalAlignment="Left" Margin="405,94,0,0" VerticalAlignment="Top" Click="okButton_Click"/>
        <Label x:Name="label" Content="Word:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="15"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="10,49,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="415" Height="29" FontSize="20"/>

    </Grid>
</Window>
